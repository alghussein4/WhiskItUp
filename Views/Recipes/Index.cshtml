@model IEnumerable<WhiskItUp.Models.Recipe>
@using WhiskItUp.Models;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Recipe Index";
}

<style>
    .table td, .table th {
        vertical-align: middle;
    }

    th {
        white-space: nowrap;
    }

    .action-btns a {
        margin-right: 5px;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-0">Recipe Index</h1>
        <p class="text-muted">Manage recipes, filtering, and reporting.</p>
    </div>

    @if (SignInManager.IsSignedIn(User) &&
        User.Identity.Name.Contains("admin", StringComparison.OrdinalIgnoreCase))
    {
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Create New
        </a>
    }
</div>


<form asp-action="Index" method="get" class="mb-4 p-3 border rounded bg-light">
    <div class="row">
        <div class="col-md-4">
            <label class="control-label">Search Name</label>
            <input type="text" name="searchString" value="@ViewBag.CurrentFilter"
                   class="form-control" placeholder="Search name... (Try 'fast' for < 30m)" />
        </div>
        <div class="col-md-4">
            <label class="control-label">Difficulty</label>
            <select name="difficulty" class="form-control" asp-items="ViewBag.DifficultyList">
                <option value="">-- All Levels --</option>
            </select>
        </div>
        <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-success me-2">Filter</button>
            <a asp-action="Index" class="btn btn-secondary">Reset</a>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped table-hover border">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.RecipeName)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.Time)</th>
                <th>@Html.DisplayNameFor(model => model.Servings)</th>
                <th>@Html.DisplayNameFor(model => model.Difficulty)</th>
                <th>@Html.DisplayNameFor(model => model.IsVegetarian)</th>
                <th>@Html.DisplayNameFor(model => model.Calories)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="8" class="text-center py-5 text-muted">No recipes found.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@Html.DisplayFor(modelItem => item.RecipeName)</strong></td>
                        <td class="text-truncate" style="max-width: 200px;">@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Time) mins
                            
                            <div class="small fw-normal">
                                @{
                                    if (item.Time <= 20)
                                    {
                                        <span class="text-success">⏱️ Quick Fix</span>
                                    }
                                    else if (item.Time <= 60)
                                    {

                                        <span class="text-primary">🍳 Standard</span>
                                    }
                                    else
                                    {

                                        <span class="text-danger">🥧 Slow Cook</span>
                                    }
                                }
                            </div>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Servings)</td>
                        <td>@Html.DisplayFor(modelItem => item.Difficulty)</td>
                        <td>@(item.IsVegetarian ? "🌿 Yes" : "No")</td>
                        <td>@Html.DisplayFor(modelItem => item.Calories) kcal</td>
                        <td class="text-center action-btns">
                            <div class="d-flex justify-content-center">
                                <a asp-action="Edit" asp-route-id="@item.RecipeId" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.RecipeId" class="btn btn-sm btn-outline-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.RecipeId" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>