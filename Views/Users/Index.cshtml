@model IEnumerable<WhiskItUp.Models.User>

@{
    ViewData["Title"] = "Users";

    var currentSearch = ViewBag.Search as string;
    var currentGender = ViewBag.Gender;
    var currentSort = ViewBag.CurrentSort as string;

    int currentPage = ViewBag.Page != null ? Convert.ToInt32(ViewBag.Page) : 1;
    int totalPages = ViewBag.TotalPages != null ? Convert.ToInt32(ViewBag.TotalPages) : 1;
    int pageSize = ViewBag.PageSize != null ? Convert.ToInt32(ViewBag.PageSize) : 10;
}

<style>
    .card {
        border-radius: 14px;
    }

    .table td, .table th {
        vertical-align: middle;
    }

    .btn {
        border-radius: 10px;
    }

    th {
        white-space: nowrap;
    }

    /* ✅ Sort Icons (Updated - Better UI) */
    .sort-btn {
        text-decoration: none;
        color: #6c757d;
        margin: 0 3px;
        font-size: 15px;
    }

        .sort-btn:hover {
            color: #0d6efd;
        }

    .sort-title {
        font-weight: 600;
        margin: 0 6px;
        color: #212529;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="mb-0">Users</h1>
        <small class="text-muted">Manage users list (Search / Filter / Sort / Pagination)</small>
    </div>

    <a asp-action="Create" class="btn btn-success">
        + Create New
    </a>
</div>

<!-- ✅ Search + Filter Card -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row g-2 align-items-center">

                <div class="col-md-6">
                    <input type="text"
                           name="search"
                           value="@currentSearch"
                           class="form-control"
                           placeholder="Search by name, email, phone..." />
                </div>

                <div class="col-md-3">
                    <select name="gender" class="form-select">
                        <option value="">All Genders</option>
                        <option value="male" selected="@(currentGender?.ToString() == "male")">Male</option>
                        <option value="female" selected="@(currentGender?.ToString() == "female")">Female</option>
                    </select>
                </div>

                <div class="col-md-3 d-flex gap-2 justify-content-end">
                    <button type="submit" class="btn btn-primary w-50">Search</button>
                    <a asp-action="Index" class="btn btn-outline-secondary w-50">Reset</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0 align-middle">

                <!-- ✅ THEAD WITH NEW ICONS -->
                <thead class="table-light">
                    <tr>

                        <!-- FullName -->
                        <th class="ps-3">
                            <a class="sort-btn"
                               asp-action="Index"
                               asp-route-search="@currentSearch"
                               asp-route-gender="@currentGender"
                               asp-route-sortOrder="name_asc">
                                <i class="bi bi-arrow-up-short"></i>
                            </a>

                            <span class="sort-title">FullName</span>

                            <a class="sort-btn"
                               asp-action="Index"
                               asp-route-search="@currentSearch"
                               asp-route-gender="@currentGender"
                               asp-route-sortOrder="name_desc">
                                <i class="bi bi-arrow-down-short"></i>
                            </a>
                        </th>

                        <!-- Email -->
                        <th>
                            <a class="sort-btn"
                               asp-action="Index"
                               asp-route-search="@currentSearch"
                               asp-route-gender="@currentGender"
                               asp-route-sortOrder="email_asc">
                                <i class="bi bi-arrow-up-short"></i>
                            </a>

                            <span class="sort-title">Email</span>

                            <a class="sort-btn"
                               asp-action="Index"
                               asp-route-search="@currentSearch"
                               asp-route-gender="@currentGender"
                               asp-route-sortOrder="email_desc">
                                <i class="bi bi-arrow-down-short"></i>
                            </a>
                        </th>

                        <!-- Gender -->
                        <th style="width:120px;">
                            <a class="sort-btn"
                               asp-action="Index"
                               asp-route-search="@currentSearch"
                               asp-route-gender="@currentGender"
                               asp-route-sortOrder="gender_asc">
                                <i class="bi bi-arrow-up-short"></i>
                            </a>

                            <span class="sort-title">Gender</span>

                            <a class="sort-btn"
                               asp-action="Index"
                               asp-route-search="@currentSearch"
                               asp-route-gender="@currentGender"
                               asp-route-sortOrder="gender_desc">
                                <i class="bi bi-arrow-down-short"></i>
                            </a>
                        </th>

                        <!-- YearsOfExp -->
                        <th style="width:170px;">
                            <a class="sort-btn"
                               asp-action="Index"
                               asp-route-search="@currentSearch"
                               asp-route-gender="@currentGender"
                               asp-route-sortOrder="exp_asc">
                                <i class="bi bi-arrow-up-short"></i>
                            </a>

                            <span class="sort-title">Years Of Exp</span>

                            <a class="sort-btn"
                               asp-action="Index"
                               asp-route-search="@currentSearch"
                               asp-route-gender="@currentGender"
                               asp-route-sortOrder="exp_desc">
                                <i class="bi bi-arrow-down-short"></i>
                            </a>
                        </th>

                        <!-- Phone -->
                        <th style="width:160px;">
                            <a class="sort-btn"
                               asp-action="Index"
                               asp-route-search="@currentSearch"
                               asp-route-gender="@currentGender"
                               asp-route-sortOrder="phone_asc">
                                <i class="bi bi-arrow-up-short"></i>
                            </a>

                            <span class="sort-title">Phone</span>

                            <a class="sort-btn"
                               asp-action="Index"
                               asp-route-search="@currentSearch"
                               asp-route-gender="@currentGender"
                               asp-route-sortOrder="phone_desc">
                                <i class="bi bi-arrow-down-short"></i>
                            </a>
                        </th>

                        <!-- ID -->
                        <th style="width:90px;" class="text-center">
                            <a class="sort-btn"
                               asp-action="Index"
                               asp-route-search="@currentSearch"
                               asp-route-gender="@currentGender"
                               asp-route-sortOrder="id_asc">
                                <i class="bi bi-arrow-up-short"></i>
                            </a>

                            <span class="sort-title">ID</span>

                            <a class="sort-btn"
                               asp-action="Index"
                               asp-route-search="@currentSearch"
                               asp-route-gender="@currentGender"
                               asp-route-sortOrder="id_desc">
                                <i class="bi bi-arrow-down-short"></i>
                            </a>
                        </th>

                        <th style="width:260px;" class="text-end pe-3">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4 text-muted">
                                No users found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3 fw-semibold">@item.FullName</td>
                                <td class="text-muted">@item.Email</td>
                                <td>@item.Gender</td>
                                <td>@item.YearsOfExp.ToShortDateString()</td>
                                <td>@item.PhoneNumber</td>
                                <td class="text-center">@item.UserId</td>

                                <td class="pe-3">
                                    <div class="d-flex justify-content-end gap-2 flex-nowrap">
                                        <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-primary">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-info">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

@if (totalPages > 1)
{
    <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="text-muted small">
            Page <b>@currentPage</b> of <b>@totalPages</b>
        </div>

        <nav>
            <ul class="pagination mb-0">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-search="@currentSearch"
                       asp-route-gender="@currentGender"
                       asp-route-sortOrder="@currentSort"
                       asp-route-page="@(currentPage - 1)"
                       asp-route-pageSize="@pageSize">
                        Previous
                    </a>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-search="@currentSearch"
                           asp-route-gender="@currentGender"
                           asp-route-sortOrder="@currentSort"
                           asp-route-page="@i"
                           asp-route-pageSize="@pageSize">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-search="@currentSearch"
                       asp-route-gender="@currentGender"
                       asp-route-sortOrder="@currentSort"
                       asp-route-page="@(currentPage + 1)"
                       asp-route-pageSize="@pageSize">
                        Next
                    </a>
                </li>
            </ul>
        </nav>
    </div>
}
