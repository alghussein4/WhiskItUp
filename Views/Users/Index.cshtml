@model IEnumerable<WhiskItUp.Models.User>

@{
    ViewData["Title"] = "Users";

    var currentSearch = ViewBag.Search as string;
    var currentGender = ViewBag.Gender;
    var currentSort = ViewBag.CurrentSort as string;

    int currentPage = ViewBag.Page != null ? Convert.ToInt32(ViewBag.Page) : 1;
    int totalPages = ViewBag.TotalPages != null ? Convert.ToInt32(ViewBag.TotalPages) : 1;
    int pageSize = ViewBag.PageSize != null ? Convert.ToInt32(ViewBag.PageSize) : 10;
}

@* Layout-only CSS: Handling alignment and spacing without forcing specific colors *@
<style>
    .table td, .table th {
        vertical-align: middle;
    }

    th {
        white-space: nowrap;
    }

    .sort-btn {
        text-decoration: none;
        margin: 0 3px;
        font-size: 1.1rem;
    }

    .sort-title {
        font-weight: 600;
        margin: 0 6px;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-0">Users</h1>
        <p class="text-muted">Manage system users, filtering, and reporting.</p>
    </div>

    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-lg"></i> Create New
    </a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row g-3 align-items-center">
                <div class="col-md-6">
                    <input type="text"
                           name="search"
                           value="@currentSearch"
                           class="form-control"
                           placeholder="Search by name, email, or phone..." />
                </div>

                <div class="col-md-3">
                    <select name="gender" class="form-select">
                        <option value="">All Genders</option>
                        <option value="male" selected="@(currentGender?.ToString() == "male")">Male</option>
                        <option value="female" selected="@(currentGender?.ToString() == "female")">Female</option>
                    </select>
                </div>

                <div class="col-md-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary flex-grow-1">Search</button>
                    <a asp-action="Index" class="btn btn-outline-secondary flex-grow-1">Reset</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover border">
        <thead>
            <tr>
                <th class="ps-3">
                    <a class="sort-btn" asp-action="Index" asp-route-sortOrder="name_asc" asp-route-search="@currentSearch" asp-route-gender="@currentGender">
                        <i class="bi bi-arrow-up"></i>
                    </a>
                    <span class="sort-title">@Html.DisplayNameFor(model => model.FullName)</span>
                    <a class="sort-btn" asp-action="Index" asp-route-sortOrder="name_desc" asp-route-search="@currentSearch" asp-route-gender="@currentGender">
                        <i class="bi bi-arrow-down"></i>
                    </a>
                </th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Gender)</th>
                <th>@Html.DisplayNameFor(model => model.YearsOfExp)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center py-5 text-muted">No user records found.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-3 fw-bold">@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@item.Gender</td>
                        <td>@item.YearsOfExp.ToShortDateString()</td>
                        <td>@item.PhoneNumber</td>
                        <td>
                            <div class="d-flex justify-content-center gap-1">
                                <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (totalPages > 1)
{
    <div class="d-flex justify-content-between align-items-center mt-4">
        <span class="text-muted small">Showing page @currentPage of @totalPages</span>
        <nav>
            <ul class="pagination mb-0">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-search="@currentSearch" asp-route-gender="@currentGender" asp-route-sortOrder="@currentSort">Previous</a>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@currentSearch" asp-route-gender="@currentGender" asp-route-sortOrder="@currentSort">@i</a>
                    </li>
                }

                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-search="@currentSearch" asp-route-gender="@currentGender" asp-route-sortOrder="@currentSort">Next</a>
                </li>
            </ul>
        </nav>
    </div>
}