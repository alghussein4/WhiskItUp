@model IEnumerable<WhiskItUp.Models.User>


@{
    ViewData["Title"] = "Users";

    var currentSort = ViewBag.CurrentSort as string;

    int currentPage = ViewBag.Page != null ? Convert.ToInt32(ViewBag.Page) : 1;
    int totalPages = ViewBag.TotalPages != null ? Convert.ToInt32(ViewBag.TotalPages) : 1;
    int pageSize = ViewBag.PageSize != null ? Convert.ToInt32(ViewBag.PageSize) : 10;
}

@* Layout-only CSS: Handling alignment and spacing without forcing specific colors *@
<style>
    .table td, .table th {
        vertical-align: middle;
    }

    th {
        white-space: nowrap;
    }

    .sort-btn {
        text-decoration: none;
        margin: 0 3px;
        font-size: 1.1rem;
    }

    .sort-title {
        font-weight: 600;
        margin: 0 6px;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-0">Users</h1>
        <p class="text-muted">Manage system users, filtering, and reporting.</p>
    </div>

    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-lg"></i> Create New
    </a>
</div>


<div class="table-responsive">
    <table class="table table-striped table-hover border">
        <thead>
            <tr>
                <th class="ps-3">
                    <a asp-action="Index" asp-route-sortBy="name_asc">▲</a>
                    @Html.DisplayNameFor(model => model.FullName)
                    <a asp-action="Index" asp-route-sortBy="name_desc">▼</a>
                </th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Gender)</th>
                <th>@Html.DisplayNameFor(model => model.YearsOfExp)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center py-5 text-muted">No user records found.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-3 fw-bold">@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@item.Gender</td>
                        <td>@item.YearsOfExp.ToShortDateString()</td>
                        <td>@item.PhoneNumber</td>
                        <td>
                            <div class="d-flex justify-content-center gap-1">
                                <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

