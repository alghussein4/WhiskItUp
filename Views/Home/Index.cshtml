@model IEnumerable<WhiskItUp.Models.ViewModels.TopRatedRecipeVM>

@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Hero Section - Image and Welcome Message Only */
    .home-bg {
        background-image: url('/images/chef-food.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 80vh; /* Controlled height so user knows to scroll */
        position: relative;
        color: white;
        width: 100%;
    }

        /* Dark Overlay for Text Readability */
        .home-bg::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.4);
            z-index: 0;
        }

    .home-bg-content {
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100%;
        text-align: center;
    }

    /* Custom Title Style for the Welcome Text */
    .display-4 {
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
    }
</style>

@* --- 1. HERO SECTION (The Background Image Part) --- *@
<div class="home-bg shadow-sm">
    <div class="home-bg-content">
        <h1 class="display-4">Welcome to WhiskItUp</h1>
        <p class="lead">
            Discover healthy living and culinary secrets.
            <a href="https://altibbi.com/%D9%85%D8%B5%D8%B7%D9%84%D8%AD%D8%A7%D8%AA-%D8%B7%D8%A8%D9%8A%D8%A9/%D8%AA%D8%BA%D8%B0%D9%8A%D8%A9/%D8%A7%D9%84%D8%BA%D8%B0%D8%A7%D8%A1-%D8%A7%D9%84%D8%B5%D8%AD%D9%8A"
               style="color: #fff; text-decoration: underline;">Visit Health Info</a>.
        </p>
    </div>
</div>

@* --- 2. MAIN CONTENT SECTION (Below the Image) --- *@
<div class="container py-5">
    <div class="row">
        <div class="col-12">
            @* The Partial View is now outside the background div *@
            <partial name="_Toprecipe" model="Model" />
        </div>
    </div>
</div>