@model WhiskItUp.Models.UserRecipeMapping

@{
    ViewData["Title"] = "Details";
}

<style>
    dl {
        background-color: #f9f9f9;
        padding: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
        width: 90%;
        max-width: 500px;
    }

    dt {
        font-weight: bold;
        margin-top: 10px;
    }

    dd {
        margin-left: 0;
        margin-bottom: 10px;
    }

    .back-link {
        display: inline-block;
        margin-top: 15px;
        padding: 6px 12px;
        background-color: #6c757d;
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
    }

        .back-link:hover {
            background-color: #5a6268;
        }
</style>

<h1>Details</h1>

<div>
    <h4>User Recipe Mapping</h4>
    <hr />
    <dl>
        <dt>@Html.DisplayNameFor(m => m.User.FullName)</dt>
        <dd>@Html.DisplayFor(m => m.User.FullName)</dd>

        <dt>@Html.DisplayNameFor(m => m.Recipe.RecipeName)</dt>
        <dd>@Html.DisplayFor(m => m.Recipe.RecipeName)</dd>

        <dt>@Html.DisplayNameFor(m => m.Rating)</dt>
        <dd>@Html.DisplayFor(m => m.Rating)</dd>

        <dt>@Html.DisplayNameFor(m => m.Comment)</dt>
        <dd>@Html.DisplayFor(m => m.Comment)</dd>

        <dt>@Html.DisplayNameFor(m => m.Favorite)</dt>
        <dd>@Html.DisplayFor(m => m.Favorite)</dd>
    </dl>

    <div>
        <a asp-action="Index" class="back-link">Back to List</a>
    </div>
</div>
