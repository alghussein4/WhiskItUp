@model IEnumerable<WhiskItUp.Models.UserRecipeMapping>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-controller="UserRecipeMappings" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Favorite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Favorite)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Recipe.RecipeId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserRecipeMappingId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.UserRecipeMappingId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.UserRecipeMappingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
