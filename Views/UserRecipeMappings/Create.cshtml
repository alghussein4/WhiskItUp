@model WhiskItUp.Models.UserRecipeMapping
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Add Recipe Review";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0"><i class="bi bi-mortarboard"></i> Whisk It Up!</h3>
                </div>
                <div class="card-body">
                    <p class="text-muted">Share your culinary experience with the community.</p>
                    <hr />

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label class="control-label fw-bold">Posting as:</label>
                            <input class="form-control bg-light" value="@ViewBag.UserFullName" readonly />
                            <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="RecipeId" class="control-label fw-bold">Recipe Name</label>
                            <select asp-for="RecipeId" class="form-control" asp-items="ViewBag.RecipeId"></select>
                            <span asp-validation-for="RecipeId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Rating" class="control-label fw-bold">Your Rating (0 - 5 Stars)</label>
                            <div class="input-group">
                                <input asp-for="Rating" class="form-control" type="number" step="0.5" min="0" max="5" placeholder="e.g. 4.5" />
                                <span class="input-group-text">⭐</span>
                            </div>
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Comment" class="control-label fw-bold">Your Thoughts</label>
                            <textarea asp-for="Comment" class="form-control" rows="4" placeholder="How did it taste? Did you make any changes?"></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check mb-4">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Favorite" /> <strong>Add to My Favorites ❤️</strong>
                            </label>
                        </div>

                        <div class="form-group d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Submit Review</button>
                            <a asp-controller="Recipes" asp-action="Index" class="btn btn-outline-secondary">Back to Recipes</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

