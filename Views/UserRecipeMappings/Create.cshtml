@model WhiskItUp.Models.UserRecipeMapping

@{
    ViewData["Create"] = "Create";
}

<style>
    .form-group {
        margin-bottom: 1rem;
    }
</style>

<h1>Details</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- User Dropdown -->
            <div class="form-group mb-3">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control"
                        asp-items="@(ViewData["UserId"] as SelectList)">
                </select>
            </div>

            <!-- Recipe Dropdown -->
            <div class="form-group mb-3">
                <label asp-for="RecipeId" class="control-label"></label>
                <select asp-for="RecipeId" class="form-control"
                        asp-items="@(ViewData["RecipeId"] as SelectList)">
                </select>
            </div>

            <!-- Rating -->
            <div class="form-group mb-3">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <!-- Comment -->
            <div class="form-group mb-3">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <!-- Favorite -->
            <div class="form-group form-check mb-3">
                <input asp-for="Favorite" class="form-check-input" />
                <label asp-for="Favorite" class="form-check-label"></label>
                <span asp-validation-for="Favorite" class="text-danger"></span>
            </div>

            <!-- Submit -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>

        </form>
    </div>
</div>
